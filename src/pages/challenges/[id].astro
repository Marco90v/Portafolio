---
import Layout from '@layouts/Layout.astro';

// import data from '../../data/challenge.json'
import DetailProject from '@components/DetailProject.astro';
import { URLChallenges } from '@utils/const';
const data:project[] = await fetch(URLChallenges).then(response => response.json());
const { id } = Astro.params;
const project = data.find((_, index:number) => index === Number(id));
if(!project){
  return Astro.redirect('/404');
}
---
<Layout title={`${project?.title} | Marco Velasquez Figarella`}>
  <DetailProject project={project} id="challenge"/>
</Layout>