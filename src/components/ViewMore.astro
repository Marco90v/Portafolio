---
// Componente de boton de ver mas proyectos
interface Props {
  href: string;
  lang: "en" | "es";
}
const { href, lang } = Astro.props;
const text = lang === "en" ? "View more" : "Ver m√°s";
---
<div class="flex justify-center mt-6">
  <a href={href} class="mx-auto transition-colors duration-300 text-center bg-green-800 hover:bg-green-600 text-white rounded-full px-8 py-2 font-bold">
    {text}
  </a>
</div>