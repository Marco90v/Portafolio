---
// Pagina de inicio
interface Props {
  lang: "en" | "es";
  titlePage: string;
}
import SectionHome from '@components/SectionHome.astro';
import SectionExperience from '@components/SectionExperience.astro';
import SectionProjects from '@components/SectionProjects.astro';
import SectionChallenges from '@components/SectionChallenges.astro';
import SectionContact from '@components/SectionContact.astro';
import Layout from '@layouts/Layout.astro';
const { lang, titlePage } = Astro.props;
---
<Layout title={titlePage}>
  <SectionHome lang={lang} />
  <SectionExperience lang={lang} />
  <SectionProjects lang={lang} />
  <SectionChallenges lang={lang} />
  <SectionContact lang={lang} />
</Layout>