---
// import { ViewTransitions } from 'astro:transitions';
import '../styles/global.css';
import Navbar from '../components/Navbar.astro';
const title = Astro.props.title;
const {id} = Astro.params;
const colors = ["blue", "cyan", "indigo"];
const color = colors[Math.floor(Math.random() * colors.length)];
---

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{title}</title>
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Inter:ital,opsz,wght@0,14..32,100..900;1,14..32,100..900&display=swap" rel="stylesheet">
  <!-- <ViewTransitions /> -->
</head>
<body class={`text-base text-white bg-gradient-to-r from-gray-900 from-40% via-${color}-950 via-70% to-gray-900 to-95% min-h-screen`}>
  { !id && <Navbar color={color} /> }
  <main class="flex flex-col min-h-screen pb-14">
    <slot />
  </main>
</body>
</html>
